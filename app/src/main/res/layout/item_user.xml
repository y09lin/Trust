<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_name"
        tools:text="@string/app_name"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_score"
        tools:text="999"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/text_name"
        app:layout_constraintBottom_toBottomOf="@id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_challenge"
        tools:text="挑战99"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_against"
        tools:text="迎战99"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/text_challenge"
        app:layout_constraintBaseline_toBaselineOf="@id/text_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_battle"
        android:src="@drawable/open_fight_default"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_challenge"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>